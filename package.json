{
  "name": "cad-camera-controls",
  "version": "0.2.0",
  "description": "CAD-style camera controls for Three.js with fixed-pivot rotate, modifier pan, and cursor-anchored zoom. Optional React Three Fiber wrapper included.",
  "private": false,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./react": "./src/react.ts"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "keywords": [
    "threejs",
    "react-three-fiber",
    "camera-controls",
    "cad",
    "3d"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@react-three/fiber": "^8.0.0 || ^9.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "three": ">=0.160.0"
  },
  "peerDependenciesMeta": {
    "@react-three/fiber": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@react-three/fiber": "^9.5.0",
    "@stylistic/eslint-plugin": "^5.9.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/three": ">=0.160.0",
    "eslint": "^9.39.3",
    "jsdom": "^24.1.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev:example": "npm run dev --prefix examples",
    "build:example": "npm run build --prefix examples"
  }
}
